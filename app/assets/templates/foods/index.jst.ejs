<h1>Foods Index View</h1>

<div class="content">
  <div class="form group">
    <h3>Search our food database by name:</h3>
    <form>
    <input type="text" name="query">
    </form>
  </div>

  <div class="bottom">
    <div class="results">
      <ul>
        <% if (foods.length > 0) {%>
        <% foods.each(function(food) { %>
          <li class="list" data-food_id="<%= food.get("item_id") %>"><%= food.get("item_name") %></li>
        <% }); } else { %>
          <li class="none">No items match your search, try again.</li>
          <% } %>
      </ul>
    </div>

    <div class="nutrition-label">
    </div>
  </div>
</div>

