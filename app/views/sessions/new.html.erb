<h1>YourFitnessPal</h1>
<button id="demo">DEMO USER</button>
<div class="sign-in">
	<h2>Sign In <span class="small">(or <%= link_to "Sign Up", controller: "users", action: "new" %>)</span></h2>
	<%= render "layouts/errors" %>
	<form id="login" action="<%= session_url %>" method="post">
	  <input
	     name="authenticity_token"
	     type="hidden"
	     value="<%= form_authenticity_token %>">

	  <label for="user_username">Username</label>
	  <input
	     id="user_username"
	     name="user[username]"
	     type="text">
	  <br>

	  <label for="user_password">Password</label>
	  <input
	     id="user_password"
	     name="user[password]"
	     type="password">
	  <br>

	  <input type="submit" value="Log in">
	</form>
</div>

<script>

$(document).ready( function() {
	$("button#demo").click(function() {
		$("input#user_username").val("DemoUser")
		$("input#user_password").val("password")
	})
})

</script>

