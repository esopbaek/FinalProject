	color: red;
	background: none;
	cursor: pointer;
	border: none;
}

div.user-profile {
	float: right;
	margin-top: 15px;
	margin-right: 20px;
}

div#signout {
	float: right;
	margin-top: 12px;
	margin-right: 60px;
}

