<div id="profile-body">
  <div class="block1">
    <div id="profile-head"><h2><%= "TBD" %>'s profile</h2></div>
    <div class="img"></div>

    <div class="basic-info">
      <div class="basic-info-profile">
        <%= "TBD" %><br>
        <%= profile.get('age') %><br>
        <%= profile.get('gender') %><br>
        <%= profile.get('page_title') %>
      </div>
      
      <div class="basic-info-links">
        <a href="#" class="profile-links">Edit Profile</a>
      </div>
    </div>
  </div>

  <div class="block2">
    <div class="about-me">
      <p>About Me</p>

        <%= ((profile.get("about_me")  == "") ? "I havent filled this out yet." : profile.get("about_me")) %>
      <p>Why I Want to get in shape</p>
        <%= ((profile.get("why")  == "") ? "I havent filled this out yet." : profile.get("why")) %>
      <p>My Inspirations</p>
      <%= ((profile.get("inspir1")  == "") ? "I havent filled this out yet." : profile.get("inspir1")) %>
    </div>

    <div class="my-progress">
      <a href="http://www.myfitnesspal.com/weight-loss-ticker"><img border="0" src="http://tickers.myfitnesspal.com/ticker/show/4082/4948/40824948.png" /></a><p style="text-align:center;width:420px;"><small>Created by MyFitnessPal - Free <a href="http://www.myfitnesspal.com">Calorie Counter</a></small></p>
    </div>
  </div>

</div>

