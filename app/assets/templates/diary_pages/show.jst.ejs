<div class="totals">

  <table class="total-tabulations">
    <tr class="heading">
      <th class="total-label">Totals</th>
      <th class="total-col"><%= dailyTotals[0] || 0 %></th>
      <th class="total-col"><%= dailyTotals[1] || 0 %></th>
      <th class="total-col"><%= dailyTotals[2] || 0 %></th>
      <th class="total-col"><%= dailyTotals[3] || 0 %></th>
      <th class="total-col"><%= dailyTotals[4] || 0 %></th>
      <th class="total-col"><%= dailyTotals[5] || 0 %></th>
    </tr>

    <tr class="heading">
      <td class="total-label">Your Daily Goal</td>
      <th class="total-col"><%= page.get("targetCals") %></th>
      <th class="total-col"><%= page.get("targetCarbs") %></th>
      <th class="total-col"><%= page.get("targetFat") %></th>
      <th class="total-col"><%= page.get("targetProtein") %></th>
      <th class="total-col"><%= page.get("targetSodium") %></th>
      <th class="total-col"><%= page.get("targetSugar") %></th>
    </tr>

    <tr class="heading">
      <td class="total-label">Remaining</td>
			<% if (page.get("targetCals") - dailyTotals[0] < 0) { %>  
				      <td class="remaining"><span class="red"><%= page.get("targetCals") - dailyTotals[0] %></span></td>
				<% } else { %>
      <td class="remaining"><%= page.get("targetCals") - dailyTotals[0] %></td>
			<% } %>
			
			<% if (page.get("targetCarbs") - dailyTotals[1] < 0) { %>  
				      <td class="remaining"><span class="red"><%= page.get("targetCarbs") - dailyTotals[1] %></span></td>
				<% } else { %>
      <td class="remaining"><%= page.get("targetCarbs") - dailyTotals[1] %></td>
			<% } %>
			
			<% if (page.get("targetFat") - dailyTotals[2] < 0) { %>  
				      <td class="remaining"><span class="red"><%= page.get("targetFat") - dailyTotals[2] %></span></td>
				<% } else { %>
      <td class="remaining"><%= page.get("targetFat") - dailyTotals[2] %></td>
			<% } %>
			
			
			<% if (page.get("targetProtein") - dailyTotals[3] < 0) { %>  
				      <td class="remaining"><span class="red"><%= page.get("targetProtein") - dailyTotals[3] %></span></td>
				<% } else { %>
      <td class="remaining"><%= page.get("targetProtein") - dailyTotals[3] %></td>
			<% } %>

			<% if (page.get("targetSodium") - dailyTotals[4] < 0) { %>  
				      <td class="remaining"><span class="red"><%= page.get("targetSodium") - dailyTotals[4] %></span></td>
				<% } else { %>
      <td class="remaining"><%= page.get("targetSodium") - dailyTotals[4] %></td>
			<% } %>
			
			<% if (page.get("targetSugar") - dailyTotals[5] < 0) { %>  
				      <td class="remaining"><span class="red"><%= page.get("targetSugar") - dailyTotals[5] %></span></td>
				<% } else { %>
	    <td class="remaining"><%= page.get("targetSugar") - dailyTotals[5] %></td>
			<% } %>
    </tr>


    <tr class="heading">
      <td class="total-label"></td>
      <td class="total-type">Calories</td>
      <td class="total-type">Carbs</td>
      <td class="total-type">Fat</td>
      <td class="total-type">Protein</td>
      <td class="total-type">Sodium</td>
      <td class="total-type">Sugar</td>
    </tr>
  </table>

</div>

