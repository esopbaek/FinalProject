
	<% if signed_in? %>
	<div id="header" class="group">
	<div class="logo group">
		<a href="<%= dashboard_url %>"><img src="<%= asset_path 'YourFitnessPal-logo.png' %>" alt="Logo"></a>
	</div>
	
	<div id="signout"><%= button_to "Sign Out", session_url, :method => :delete %></div>
	<div class="user-profile">Hi, <a href="<%= social_profile_url %>"> <%= current_user.username %></a></div>

	</div>
	<% end %>

<style>

.group:after {
	clear: both;
	content: "";
	display: block;
}

